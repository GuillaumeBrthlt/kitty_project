
<section>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center flex-grow-1">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <%= image_tag "new_profile_pic.jpeg", alt: "Sample image", style: "width: auto; height: calc(100vh - 175px)"%>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1 class="text-center">S'inscrire</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email input -->
          <div class="form-outline mb-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "nouveau mot de passe", class:"form-control" %>
          </div>
    
          <div class="form-outline mb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "nouveau mot de passe", class:"form-control" %>
          </div>

          <!-- Confirm -->
          <div class="text-center text-lg-start pt-2">
            <div class="actions">
              <%= f.submit "S'inscrire", class:"btn btn-primary btn-lg px-3 mb-3" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      
      </div>
    </div>
  </div>
</section>