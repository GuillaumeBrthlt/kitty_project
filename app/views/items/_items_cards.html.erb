<div class="container px-4 px-lg-5 mt-5">
  <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    <% @items.each do |item|%>
    <div class="col mb-5">
        <div class="card h-100">
        <!-- Product image-->
        <% if item.picture.attached? %>
          <%= image_tag item.picture, class:"card-img-top mb-5 mb-md-0"%>
        <% else %>
          <p>Mmmmh... ü§î Pas d'image pour cette item</p>
        <% end %>
        <!-- Product details-->
          <div class="card-body p-4">
            <div class="text-center">
              <!-- Product name-->
              <h5 class="fw-bolder"><%= item.title %></h5>
              <!-- Product price-->
              <%= item.price %> ‚Ç¨
            </div>
          </div>
          <!-- Product actions-->
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><%= link_to 'D√©tails', item_path(item), class:"btn btn-outline-dark mt-auto mb-2" %>
          </div>
            <div class="text-center">
              <% if current_user %>
                <% if already_in_cart?(item.id) %>
                  <span class= "text">Produit d√©ja ajout√©</span>
                <% else %>
                  <%= button_to 'Ajouter au panier', purchases_path, class:"btn btn-outline-dark mt-2", method: 'post', params: { item_id: item.id }, remote: true %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>