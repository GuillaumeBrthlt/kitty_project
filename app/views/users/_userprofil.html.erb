<section class="h-100" style="background-color: black ;">
  <div class="container h-100 py-5">
    <div class="mb-5">
      <a href="/items">Retour</a>
      <br>
      <br>
      <h3 class="mb-0 text-white">Mon profil</h3>
    </div>

    <div class="card rounded-3 mb-4">
      <div class="card-body p-1">
        <div class="row justify-content-around align-items-center h-100">
          <div class="row">
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <label>Prénom</label>
                </div>
                <div class="col-md-6">
                  <p> <%= @user.email %> </p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Nom</label>
                </div>
              <div class="col-md-6">
                <p> <%= @user.email %> </p>
              </div>
            </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Adresse e-mail</label>
                </div>
              <div class="col-md-6">
                <p> <%= @user.email %> </p>
                <br>
              </div>

              <div class="col-md-4">
                <button type="button" class="btn btn-primary" href="/mon_compte/edit">Modifier mon profil</button>
              </div>
            </div>
            <br>
            <br>
            <div class="row">
              <div class="col-md-6">
                <h6>Historique de mes commandes :</h6>
                <br>
              </div>
              <div class="list-group">
                <% #@orders.each do |order| %>
                <a href="#" class="list-group-item list-group-item-action active"> #item.id #item.title En cours d'envoi</a>
                <a href="#" class="list-group-item list-group-item-action"> #item.id #item.title Envoyée</a>
                <% #end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


        

      
              
  


          




