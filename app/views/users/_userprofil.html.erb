<section class="h-100" style="background-color: black ;">
  <div class="container h-100 py-5">
    <div class="mb-5">
      <a href="/items">Retour</a>
      <br>
      <br>
      <h3 class="mb-0 text-white">Mon profil</h3>
    </div>

    <div class="card rounded-3 mb-4">
      <div class="card-body p-1">
        <div class="row justify-content-around align-items-center h-100">
          <div class="row">
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <label>Prénom</label>
                </div>
                <div class="col-md-6">
                  <p> <%= @user.email %> </p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Nom</label>
                </div>
              <div class="col-md-6">
                <p> <%= @user.email %> </p>
              </div>
            </div>
              <div class="row">
                <div class="col-md-6">
                <label>Adresse e-mail</label>
                </div>
              <div class="col-md-6">
                <p> <%= @user.email %> </p>
                <br>
              </div>

              <div class="col-md-4">
                <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-primary" %>               
              </div>
            </div>
            <br>
            <br>
            <div class="row">
              <div class="col-md-6">
                <h6>Historique de mes commandes :</h6>
                <br>
              </div>
              <div class="list-group">
                <% @user.orders.each do |order| %>                
                <div class="accordion mb-5" id="accordionExample">
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="heading<%=order.id%>">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=order.id%>" aria-expanded="true" aria-controls="collapse<%=order.id%>">
                        Commande passée le <%= order.created_at.strftime("%d/%m/%Y à %T") %>
                      </button>
                    </h2>
                    <div id="collapse<%=order.id%>" class="accordion-collapse collapse" aria-labelledby="heading<%=order.id%>" data-bs-parent="#accordionExample" style="">
                      <div class="accordion-body">
                        <div class="list-group">
                          <% order.items.each do |item| %>
                            <div class="list-group-item list-group-item-action d-flex justify-content-between">
                              <div>
                                <p><%= item.id %> | <%= item.title %></p>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


        

      
              
  


          




